<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFondo">
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_biblioteca"
        tools:context=".BibliotecaActivity">

    <WebView
            android:layout_width="395dp"
            android:layout_height="367dp"
            android:id="@+id/BookRes"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp" android:layout_marginTop="125dp"
            app:layout_constraintTop_toBottomOf="@+id/textMensaje" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Reserva de libro"
            android:ems="10"
            android:id="@+id/textAsunto"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="48dp"/>
    <EditText
            android:layout_width="349dp"
            android:layout_height="87dp"
            android:inputType="textPersonName"
            android:text="Buen día, me gustaría reservar el libro: "
            android:ems="10"
            android:id="@+id/textMensaje"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/textAsunto" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="31dp" android:layout_marginStart="31dp" android:layout_marginBottom="113dp"
            app:layout_constraintBottom_toTopOf="@+id/BookRes" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="31dp" android:layout_marginRight="31dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</android.support.constraint.ConstraintLayout>