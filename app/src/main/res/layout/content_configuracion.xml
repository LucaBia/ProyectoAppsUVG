<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/colorFondo"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_configuracion"
        tools:context=".ConfiguracionActivity">

    <ImageView
            android:layout_width="408dp"
            android:layout_height="222dp" app:srcCompat="@drawable/cit2"
            android:id="@+id/imageView4" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="1dp" android:layout_marginRight="1dp"/>
    <ImageView
            android:layout_width="368dp"
            android:layout_height="117dp" app:srcCompat="@drawable/logo_horizontal_blanco"
            android:id="@+id/imageView3"
            android:contentDescription="TODO"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            android:layout_marginBottom="350dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.481" app:layout_constraintVertical_bias="0.652"/>
    <TextView
            android:text="Nombre"
            android:layout_width="166dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtNombre" android:textSize="27sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="140dp" android:layout_marginStart="140dp" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="90dp" android:layout_marginRight="90dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Carne"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCarnet" android:textSize="28sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="168dp" android:layout_marginStart="168dp" android:layout_marginTop="41dp"
            app:layout_constraintTop_toBottomOf="@+id/txtNombre" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="121dp" android:layout_marginRight="121dp"/>
    <TextView
            android:text="         Correo"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtCorreo" android:textSize="28sp"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCarnet" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="104dp" android:layout_marginRight="104dp"
    />
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="98dp"
            android:layout_marginStart="98dp" android:layout_marginTop="60dp"
            app:layout_constraintTop_toBottomOf="@+id/txtCorreo" android:hint="Contraseña actual"
            android:textColor="@color/colorText"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp" android:layout_marginTop="51dp"
            app:layout_constraintTop_toBottomOf="@+id/editText" android:layout_marginBottom="51dp"
            app:layout_constraintBottom_toBottomOf="parent" android:hint="Nueva contraseña"
            android:textColor="@color/colorText" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Cambiar"
            android:layout_width="72dp"
            android:layout_height="45dp"
            android:id="@+id/button"
            android:background="@color/common_google_signin_btn_text_dark_focused" android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" app:layout_constraintStart_toEndOf="@+id/editText2"
            android:layout_marginBottom="17dp" app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>