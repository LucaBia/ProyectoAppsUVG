<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorFondo">
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_detalle_club"
        tools:context=".DetalleClubActivity">

    <ImageView
            android:layout_width="333dp"
            android:layout_height="167dp" app:srcCompat="@drawable/logo_horizontal_blanco"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="39dp"
            android:layout_marginStart="39dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp"/>
    <TextView
            android:text='"Nombre Club"'
            android:layout_width="281dp"
            android:layout_height="73dp"
            android:id="@+id/tvNombre" android:textSize="28sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="64dp" android:layout_marginStart="64dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <TextView
            android:text="   Horarios"
            android:layout_width="159dp"
            android:layout_height="48dp"
            android:id="@+id/textView4" android:textSize="30sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="124dp" android:layout_marginStart="124dp"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/tvDescripcion"/>
    <TextView
            android:text='"Descripcion"'
            android:layout_width="204dp"
            android:layout_height="114dp"
            android:id="@+id/tvDescripcion" android:textSize="18sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="104dp" android:layout_marginStart="104dp"
            app:layout_constraintTop_toBottomOf="@+id/tvNombre"/>
    <TextView
            android:text="Horario:"
            android:layout_width="204dp"
            android:layout_height="107dp"
            android:id="@+id/tvHorarios" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="103dp"
            android:layout_marginStart="103dp" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:textSize="18sp"/>
    <Button
            android:text="Inscribete"
            android:layout_width="191dp"
            android:layout_height="wrap_content"
            android:id="@+id/joinButton" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="108dp"
            android:layout_marginStart="108dp" android:layout_marginTop="52dp"
            app:layout_constraintTop_toBottomOf="@+id/tvHorarios" android:layout_marginBottom="78dp"
            app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            app:layout_constraintVertical_bias="0.0"
            android:background="@color/common_google_signin_btn_text_dark_focused"/>
</android.support.constraint.ConstraintLayout>