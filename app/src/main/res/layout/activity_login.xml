<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                            android:id="@+id/nestedScrollView"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:background="@color/colorFondo"
                                            android:paddingBottom="20dp"
                                            android:paddingLeft="20dp"
                                            android:paddingRight="20dp"
                                            android:paddingTop="20dp"
                                            tools:context=".LoginActivity">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/appCompatImageView"/>

        <ImageView
                android:layout_width="344dp"
                android:layout_height="247dp" app:srcCompat="@color/navigation_drawer_icon"
                android:id="@+id/imageView7"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="235dp"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView"/>
        <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" android:layout_marginTop="40dp">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_email"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@android:color/white"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
                android:id="@+id/textInputLayoutPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" android:layout_marginTop="160dp">

            <android.support.design.widget.TextInputEditText
                    android:id="@+id/textInputEditTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_password"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="@android:color/white"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatButton
                android:id="@+id/appCompatButtonLogin"
                android:layout_width="314dp"
                android:layout_height="41dp"
                android:background="@color/colorTextHint"
                android:text="@string/text_login"
                android:layout_marginLeft="15dp" android:layout_marginStart="15dp"
                app:layout_constraintStart_toEndOf="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="360dp" android:layout_marginRight="360dp" android:layout_marginBottom="14dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewLinkRegister"/>

        <android.support.v7.widget.AppCompatTextView
                android:id="@+id/textViewLinkRegister"
                android:layout_width="fill_parent"
                android:layout_height="53dp"
                android:gravity="center"
                android:text="@string/text_not_member"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" android:layout_marginTop="400dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="254dp" app:srcCompat="@drawable/cit1"
                android:id="@+id/imageView10"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
                android:layout_width="149dp"
                android:layout_height="148dp" app:srcCompat="@color/colorFondo2"
                android:id="@+id/imageView12" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView13" android:layout_marginBottom="190dp"
                app:layout_constraintBottom_toTopOf="@+id/imageView7"
                app:layout_constraintStart_toEndOf="@+id/imageView13" android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="260dp" android:layout_marginRight="260dp"/>
        <ImageView
                android:layout_width="170dp"
                android:layout_height="178dp" app:srcCompat="@drawable/logo_vertical_blanco"
                android:id="@+id/imageView13"
                app:layout_constraintStart_toEndOf="@+id/imageView10" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="340dp" android:layout_marginRight="340dp"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" android:layout_marginBottom="400dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewLinkRegister"/>
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.NestedScrollView>